class TicketBooking {
    private int tickets = 1;

    synchronized void bookTicket(String customer) {
        if (tickets > 0) {
            System.out.println(customer + " booked the ticket!");
            tickets--;
        } else {
            System.out.println("Sorry, " + customer + ". Ticket already booked.");
        }
    }
}

public class BookingTest {
    public static void main(String[] args) {
        TicketBooking booking = new TicketBooking();

        Thread t1 = new Thread(() -> booking.bookTicket("Customer 1"));
        Thread t2 = new Thread(() -> booking.bookTicket("Customer 2"));

        t1.start();
        t2.start();
    }
}
