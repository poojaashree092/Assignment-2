public class SentenceAnalysis {
    public static void main(String[] args) {
        String sentence = "Java Programming is FUN and Powerful!";

        System.out.println("Character count: " + sentence.length());
        String lower = sentence.toLowerCase();
        System.out.println("Lowercase: " + lower);
        System.out.println("Underscored: " + sentence.replace(" ", "_"));
        System.out.println("Contains 'Java'? " + sentence.contains("Java"));
        System.out.println("Word 'FUN' in lowercase: " +
                sentence.substring(sentence.indexOf("FUN"), sentence.indexOf("FUN") + 3).toLowerCase());
    }
}
